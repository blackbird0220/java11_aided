package sec1;
//내부 클래스 
class Outer{
	private int num = 10;	//멤버 필드
	private static int sNum = 20; //정적 멤버 필드->데이터 공유

	private Inner inner;
	
	public Outer() {	//Outer 생성자를 사용하게 되면, 자동적으로 내부 클래스에 대한 인스턴스
		
	}
	
	class Inner {	//내부 클래스
		int inNum = 1000;
		
		void inMethod() {
			System.out.println("내부 클래스에서 외부 클래서의 멤버 : num "+num);
			System.out.println("내부 클래스에서 외부 클래서의 정적 멤버 변수 접근 : sNum "+sNum);
		}
	}
	public void outMethod() {	//외부 클래스에서 내부 클래스의 메소드 호출
		
	}
public class InnerClassExam {
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}


